+		goto out;
+
+	h_dentry = au_h_dptr(dentry);
+	h_parent = h_dentry->d_parent; /* dir inode is locked */
+	h_dir = h_parent->d_inode;
+	IMustLock(h_dir);
+	sb = dir->i_sb;
+	dlgt = au_need_dlgt(sb);
