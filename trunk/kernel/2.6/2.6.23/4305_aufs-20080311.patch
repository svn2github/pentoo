+{
+	int err;
+	aufs_bindex_t bindex, bend;
+	void *page;
+
+	//au_debug_on();
+	AuTraceEnter();
+
+	err = -ENOMEM;
+	page = (void *)__get_free_page(GFP_TEMPORARY);
+	if (unlikely(!page))
+		goto out;
+
+	err = 0;
+	bend = sbend(sb);
