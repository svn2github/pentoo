+static void au_hi_lock(struct inode *h_inode, int isdir, struct inode *inode,
+		       aufs_bindex_t bindex)
+{
+	if (!isdir)
+		vfsub_i_lock_nested(h_inode, AuLsc_I_CHILD);
+	else
+		hdir2_lock(h_inode, inode, bindex);
+}
