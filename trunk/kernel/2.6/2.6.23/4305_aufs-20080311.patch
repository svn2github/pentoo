+	AuDebugOn(len != PLINK_NAME_LEN);
+	h_inode = au_h_iptr_i(inode, bindex);
+	AuDebugOn(!h_inode);
+	rlen = snprintf(name, len, "%lu.%lu", inode->i_ino, h_inode->i_ino);
+	AuDebugOn(rlen >= len);
+	return rlen;
+}
