+static void au_hi_unlock(struct inode *h_inode, int isdir, struct inode *inode,
+			 aufs_bindex_t bindex)
+{
+	if (!isdir)
+		vfsub_i_unlock(h_inode);
+	else
+		hdir_unlock(h_inode, inode, bindex);
+}
