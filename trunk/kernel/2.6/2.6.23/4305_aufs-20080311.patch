+#if LINUX_VERSION_CODE < KERNEL_VERSION(2, 6, 18)
+	return h_sb;
+#else
+	if (!au_test_nfs(h_sb))
+		return h_sb->s_root;
+
+	/* sigh,,, why nfs s_root has wrong inode? */
+	return dtodi(sb->s_root)->di_hdentry[0 + bindex].hd_dentry;
